<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hzmyself.crm.settings.dao.UserDao">
    <select id="login" resultType="com.hzmyself.crm.settings.entity.User">
        select * from tbl_user where loginAct = #{loginAct} and loginPwd = #{loginPwd}
    </select>

    <select id="getUsers" resultType="com.hzmyself.crm.settings.entity.User">
        select * from tbl_user
    </select>
	
	
	
</mapper>
























